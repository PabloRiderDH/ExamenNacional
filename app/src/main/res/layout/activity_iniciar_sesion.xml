<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/cemento"
    tools:context=".IniciarSesion">

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="328dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="387dp">

        <EditText
            android:id="@+id/et_emailinicio"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:text="ingresar un email" />

        <EditText
            android:id="@+id/et_passwordinicio"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:text="ingrese un password" />

        <Button
            android:id="@+id/btn_sesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesion" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/xyz"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="51dp" />

</androidx.constraintlayout.widget.ConstraintLayout>